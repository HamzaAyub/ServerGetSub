<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pk.getsub.www.servergetsub.map.CallOrderActivity"
    android:orientation="vertical">

    <include layout="@layout/order_toolbar"
        android:id="@+id/toolbar_call_order"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />


    <TextView
        android:id="@+id/txt_first_call_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03211100117"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:layout_marginTop="35dp"
      />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/btn_first_call_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Call"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:elevation="4dp"
            android:layout_weight="0.5"
            android:layout_marginRight="16dp"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_1st_sms_call_order"
            android:background="@color/colorPrimary"
            android:text="SMS"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:elevation="4dp"
            android:layout_weight="0.5"
             />


    </LinearLayout>



    <TextView
        android:id="@+id/txt_second_call_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03494906012"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:layout_marginTop="30dp"

        />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        >





    <Button
        android:id="@+id/btn_second_call_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Call"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.5"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_2nd_sms_call_order"
        android:background="@color/colorPrimary"
        android:text="SMS"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_weight="0.5"
         />

    </LinearLayout>
</LinearLayout>
